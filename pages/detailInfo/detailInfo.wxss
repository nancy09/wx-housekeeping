/* detailInfo.wxss */
.content{
  padding: 40rpx 20rpx;
  font-size:26rpx;
}

.ft-bar{
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height:90rpx;
  line-height:90rpx;
  display:flex;
  flex-flow:row wrap;
  justify-content: space-between;
  box-sizing:border-box;
  border-top:1px solid #eee;
  background:#fff;
}
.ft-bar .amount {
  width:50%;
  color:red;
  font-size:28rpx;
  padding:0 20rpx;
  box-sizing: border-box;
}
.ft-bar .send-btn{
  width:50%;
  background:#1a99fc;
  font-size:32rpx;
  color:#fff;
  text-align:center;
  border-radius: 0;
}